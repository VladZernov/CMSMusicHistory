@model MusicHistoryCMS.Models.Composition

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Composer" class="control-label col-md-2">Composer</label>
            <div class="col-md-10">
                <select asp-for="ComposerID" class="form-control" asp-items="(SelectList)@ViewData["ComposerID"]"></select>
                <span asp-validation-for="ComposerID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Genre" class="control-label col-md-2">Genre</label>
            <div class="col-md-10">
                <select asp-for="GenreID" class="form-control" asp-items="(SelectList)@ViewData["GenreID"]"></select>
                <span asp-validation-for="GenreID" class="text-danger"/>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Keyword" class="control-label col-md-2">Keyword</label>
            <div class="col-md-10">
                <select asp-for="KeywordID" class="form-control" asp-items="(SelectList)@ViewData["KeywordID"]"></select>
                <span asp-validation-for="KeywordID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Value" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="YoutubeKey" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="YoutubeKey" class="form-control" />
                <span asp-validation-for="YoutubeKey" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="mh-page-footer">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
