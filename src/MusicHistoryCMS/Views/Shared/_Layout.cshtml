<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <environment names="Development,Staging,Production">
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-theme.css" />
            <link rel="stylesheet" href="~/css/site.css" />
            <!-- Bootstrap Core CSS -->
            <link href="~/lib/sb-admin/css/bootstrap.min.css" rel="stylesheet">
            <!-- Custom CSS -->
            <link href="~/lib/sb-admin/css/sb-admin.css" rel="stylesheet">
            <!-- Custom CSS -->
            <link href="~/lib/sb-admin/css/sb-admin.css" rel="stylesheet">
            <!-- Morris Charts CSS -->
            <link href="~/lib/sb-admin/css/plugins/morris.css" rel="stylesheet">
            <!-- Custom Fonts -->
            <link href="~/lib/sb-admin/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
            <link rel="stylesheet" href="~/css/table.css" />
            <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900' rel='stylesheet' type='text/css'>
        </environment>
    </head>
<body>

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Magazine "History of Music" - Content Management System</a>
            </div>
            <!-- Top Menu Items -->
            @await Html.PartialAsync("_LoginPartial")
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="/Issues/Index">  Issues</a>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#demo_1"><i class="fa fa-fw fa-edit"></i> Content <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="demo_1" class="collapse">
                            <li>
                                <a href="/Compositions/Index">  Compositions</a>
                            </li>
                            <li>
                                <a href="/Composers/Index">  Composers</a>
                            </li>
                            <li>
                                <a href="/Genres/Index">  Genres</a>
                            </li>
                            <li>
                                <a href="/Periods/Index">  Periods</a>
                            </li>
                            <li>
                                <a href="/Instruments/Index">  Instruments</a>
                            </li>
                            <li>
                                <a href="/Keywords/Index">  Keywords</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("My Articles", "Index", "Articles", new { user = User.Identity.Name })
                    </li>
                    <li>
                        <a href="/Articles/Index"> All Articles</a>
                    </li>
                    <li>
                        <a href="/Account/Register"> Add New User</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; Magazine "History of Music" - Content Management System</p>
                </footer>
        </div>
        <!-- /#page-wrapper -->
    </div>


    <environment names="Development,Staging,Production">
        <script src="~/js/site.js" asp-append-version="true"></script>
        <!-- jQuery -->
        <script src="~/lib/sb-admin/js/jquery.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/lib/sb-admin/js/bootstrap.min.js"></script>
        <!-- Morris Charts JavaScript -->
        <script src="~/lib/sb-admin/js/plugins/morris/raphael.min.js"></script>
        <script src="~/lib/sb-admin/js/plugins/morris/morris.min.js"></script>
        <script src="~/lib/sb-admin/js/plugins/morris/morris-data.js"></script>
        <script>
    $(document).ready(function () {
        $(".button").click(function () {
            $("#sForm").toggleClass("open");
        });

        $(".controlTd").click(function () {
            $(this).children(".settingsIcons").toggleClass("display");
            $(this).children(".settingsIcon").toggleClass("openIcon");
        });
    });
        </script>

    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
